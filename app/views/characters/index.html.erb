<div class='block'>
  <div class='content'>
    <h2 class='title'>Listing Characters</h2>
    <div class='inner'>
      <table class='table'>
        <tbody>
          <tr>
            <th class='first'/>
            <th>Name</th>
            <th>Realm</th>
            <th>Race</th>
            <th>Level</th>
            <th>Class</th>
            <th class='last'></th>
          </tr>

        <% @characters.each do |character| %>
          <tr class='<%=cycle('odd', 'even')%>'>
            <td/>
            <td><%= character.name %></td>
            <td><%= character.realm.name %></td>
            <td><%= RaceValues.convert(character.race) %></td>
            <td><%= character.level %></td>
            <td><%= ClassValues.convert(character.class_id) %></td>
            <td><%= link_to 'Show', character %> | <%= link_to 'Refresh', refresh_character_path(character), :remote => true%> | <%= link_to 'Destroy', character, confirm: 'Are you sure?', method: :delete %></td>
          </tr>
        <% end %>
        </tbody>
      </table>
      
      <div class='actions-bar wat-cf'>
        <div class='actions'>
          <%= link_to 'New Character', new_character_path %>
        </div>
        <div class='pagination'>
          <%= will_paginate @realms %>
        </div>
      </div>
    </div>
  </div>
</div>