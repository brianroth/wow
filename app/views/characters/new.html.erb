<div id='block-forms' class='block'>
  <div class='content'>
    <h2 class='tite'>Find Character</h2>
    <div class='inner'>
    <%= form_for(@character, :html => {:class => "form"}) do |f| %>
      <div class="group">
        <%= f.label :name, :class => 'label'%>
        <%= f.text_field :name%>
      </div>
      <div class="group">
        <%= f.label :realm, :class => 'label' %>
        <%= collection_select(:character, :realm_id, Realm.all, :id, :name) %>
      </div>
      <div class="actions">
        <input type="submit" value="Search" name="commit">
      </div>
    <% end %>
    </div>
  </div>
</div>